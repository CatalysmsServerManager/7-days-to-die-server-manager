<div class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= '/user/' + req.session.userId + '/dashboard' %>"> Dashboard </a>
      </li>
      <li class="breadcrumb-item">
