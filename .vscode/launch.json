{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start app",
            "program": "${workspaceFolder}/app.js",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen"
        },
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha All",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--timeout",
              "999999",
              "--colors",
              "${workspaceFolder}/test",
              "--exit"
          ],
          "console": "internalConsole",
          "internalConsoleOptions": "neverOpen"
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha Current File",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--timeout",
              "999999",
              "--colors",
              "${file}",
              "--exit"
          ],
          "console": "internalConsole",
          "internalConsoleOptions": "neverOpen"
      }
    ]
  }